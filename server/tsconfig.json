{
	"compilerOptions": {
		"baseUrl": "./",
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "node",
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"node",
			"jest"
		],
		"esModuleInterop": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"allowImportingTsExtensions": true,
		"noImplicitAny": false,
		"allowJs": false,
		"sourceMap": true,
		"jsx": "react"
	},
	"include": [
		"utils/**/*",
		"src/**/*"
	],
	"exclude": [
		"jest.setup.ts",
		"jest.config.ts"
	],
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
