{
	"compilerOptions": {
		"module": "ESNext",
		"target": "ES2022",
		"lib": ["ES2022", "dom"],
		"sourceMap": true,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types"],
		"types": ["jasmine", "node"]
	},
	"include": ["test.ts", "src/app/**/*.spec.ts", "src/app/**/*.d.ts"],
	"exclude": ["node_modules"]
}
